{
  "manifest_version": 3,
  "name": "Microsoft Support Onboarding Template Generator",
  "version": "1.0.0",
  "description": "Generate rich text onboarding templates for Microsoft support customers",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.svg",
      "48": "assets/icon48.svg",
      "128": "assets/icon128.svg"
    }
  },
  "icons": {
    "16": "assets/icon16.svg",
    "48": "assets/icon48.svg",
    "128": "assets/icon128.svg"
  },
  "options_page": "options.html",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}